@model WebStore.Models.Employee
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Детали</title>
</head>
<body>
    <h3>Сотрудник: @Model.LastName  @Model.FirstName @Model.Patronymic</h3>
    <hr />

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>Дата рождения</th>
                <th>Дата устройства на работу</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.LastName</td>
                <td>@Model.FirstName</td>
                <td>@Model.Patronymic</td>
                <td>@Model.Age</td>
                <td>@Model.DateOfBorn</td>
                <td>@Model.DateOfEmployment</td>
            </tr>
        </tbody>
    </table>

    <p>
        <a href="/Home/Employees">Сотрудники</a>
    </p>

</body>
</html>
